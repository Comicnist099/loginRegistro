<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="MensajitOwO"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/PerfilImageChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/PerfilImageChat"
        app:layout_constraintTop_toTopOf="@+id/PerfilImageChat"
        app:layout_constraintVertical_bias="0.0" />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/PerfilImageChat"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/penguin" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/FotoMandarUsuarioA"
        android:layout_width="162dp"
        android:layout_height="152dp"
        android:visibility="gone"
        android:src="@drawable/penguin"
        app:layout_constraintTop_toBottomOf="@+id/textView_from"
        tools:layout_editor_absoluteX="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>