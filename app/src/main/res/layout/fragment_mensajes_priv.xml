<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mensajesPriv"
    android:background="#3A7C85">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />


    <ImageView
        android:id="@+id/logro_bienvenido"
        android:layout_width="178dp"
        android:layout_height="125dp"
        android:layout_marginBottom="412dp"
        android:background="@drawable/nlogro_bienvenido"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/textView2"

        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logro_CambioEstado"
        android:layout_width="178dp"
        android:layout_height="125dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/nlogro_cambioestado"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.12"

        app:layout_constraintStart_toStartOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="349dp"
        android:layout_height="68dp"
        android:layout_marginBottom="528dp"
        android:text="LOGROS"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <ImageView
        android:id="@+id/logro_Esotilin"
        android:layout_width="186dp"
        android:layout_height="118dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/nlogro_esotilin"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.088"

        app:layout_constraintStart_toStartOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logro_NuevoUsuario"

        android:layout_width="178dp"
        android:layout_height="125dp"
        android:layout_marginBottom="412dp"
        android:background="@drawable/nlogro_nuevo_user"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="@+id/textView2"

        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logro_NuevoGrupo"
        android:layout_width="178dp"
        android:layout_height="125dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/nlogro_creargrupo"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.884"

        app:layout_constraintStart_toStartOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logro_tareaCompleta"
        android:layout_width="178dp"
        android:layout_height="125dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/nlogro_tareaentregada"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.884"

        app:layout_constraintStart_toStartOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:clickable="true"
        android:src="@android:drawable/btn_star_big_on"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"

        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.864"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>